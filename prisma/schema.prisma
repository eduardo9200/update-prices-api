generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Products {
  code        BigInt  @db.BigInt          @default(autoincrement()) @id
  name        String  @db.VarChar(100)
  cost_price  Decimal @db.Decimal(9,2)
  sales_price Decimal @db.Decimal(9,2)
  pack        Packs[] @relation("packs_pack")
  pack_items  Packs[] @relation("packs_product")
}

model Packs {
  id         BigInt   @db.BigInt @default(autoincrement()) @id
  pack       Products @relation("packs_pack", fields: [pack_id], references: [code])
  pack_id    BigInt   @db.BigInt
  product    Products @relation("packs_product", fields: [product_id], references: [code])
  product_id BigInt   @db.BigInt
  qty        BigInt   @db.BigInt
}
